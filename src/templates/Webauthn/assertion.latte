{block content}
<div id="banner">
  <h1 n:block=title>Assertion</h1>
</div>

<div id="content">
    <pre>{print_r($credentialRequestOptions, true)}</pre>
</div>
{/block}

{block scripts}
{include parent}
<script>
  const arr2base64 = arr => btoa(String.fromCharCode(...arr));

  const credentialRequestOptions = {$credentialRequestOptions|noescape};
  credentialRequestOptions.challenge = credentialRequestOptions.challenge.split('-').join('+').split('_').join('/');
  credentialRequestOptions.challenge = Uint8Array.from(window.atob(credentialRequestOptions.challenge), c => c.charCodeAt(0));

  navigator.credentials.get({ publicKey: credentialRequestOptions })
    .then(authenticatorData => {
      const assertion = {
        id: authenticatorData.id,
        rawId: arr2base64(new Uint8Array(authenticatorData.rawId)),
        type: authenticatorData.type,
        response: {
          authenticatorData: arr2base64(new Uint8Array(authenticatorData.response.authenticatorData)),
          clientDataJSON: arr2base64(new Uint8Array(authenticatorData.response.clientDataJSON)),
          signature: arr2base64(new Uint8Array(authenticatorData.response.signature)),
          userHandle: arr2base64(new Uint8Array(authenticatorData.response.userHandle)),
        }
      };

      fetch({plink :verifyAssertion}, {
        method: 'POST',
        cache: 'no-cache',
        credentials: 'same-origin',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ ...assertion, userId: {$userId} }),
      })
        .then(({ ok, status, statusText }) => {
          if (ok === true) {
            window.location.href = {plink Profile:}
          } else {
            alert('HTTP error ' + status + ', ' + statusText)
          }
        })
        .catch(err => console.error(err))
    })
    .catch(err => console.error(err));
</script>
{/block}

{block head}
<style>
  html { overflow-y: scroll; }
  body { font: 14px/1.65 Verdana, "Geneva CE", lucida, sans-serif; background: #3484d2; color: #333; }
  .container { max-width: 940px; }

  h1, h2 { font: normal 150%/1.3 Georgia, "New York CE", utopia, serif; color: #1e5eb6; -webkit-text-stroke: 1px rgba(0,0,0,0); }

  img { border: none; }

  a { color: #006aeb; padding: 3px 1px; }

  a:hover, a:active, a:focus { background-color: #006aeb; text-decoration: none; color: white; }

  #banner { border-radius: 12px 12px 0 0; background-image: url(data:image/png;base64,); }
  #banner h1 { color: white; font-size: 50px; line-height: 121px; margin: 0; padding-left: 4%; background: url(data:image/png;base64,) no-repeat 95%; text-shadow: 1px 1px 0 rgba(0, 0, 0, .9); }
  @media (max-width: 600px) {
    #banner h1 { background: none; }
  }

  #content { background: white; border: 1px solid #eff4f7; border-radius: 0 0 12px 12px; padding: 10px 4%; overflow: hidden; }
  #content > h2 { font-size: 130%; color: #666; clear: both; padding: 1.2em 0; margin: 0; }

  h2 span { color: #87A7D5; }
  h2 a { text-decoration: none; background: transparent; }

  .with-actions {
    display: flex;
    justify-content: space-between;
  }
</style>
{/block}
